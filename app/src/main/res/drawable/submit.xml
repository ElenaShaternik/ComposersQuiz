<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="@dimen/submitButton_radius" />
        <stroke android:width="@dimen/submitButton_stroke_width" android:color="@color/submitButton_stroke_color" />
        <gradient android:angle="-90" android:startColor="@color/submitButton_gradient_startColor" android:endColor="@color/submitButton_pressed_gradient_endColor"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="@dimen/submitButton_radius" />
        <stroke android:width="@dimen/submitButton_stroke_width" android:color="@color/submitButton_stroke_color" />
        <solid android:color="@color/submitButton_stroke_color"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="@dimen/submitButton_radius" />
        <stroke android:width="@dimen/submitButton_stroke_width" android:color="@color/submitButton_stroke_color" />
        <gradient android:angle="-90" android:startColor="@color/submitButton_gradient_startColor" android:endColor="@color/submitButton_default_gradient_endColor" />
    </shape>
</item>
</selector>